.PrivacyTermsContainer
    position fixed
    z-index 5
    top 0
    overflow hidden
    color primaryFontLightColor
    font-family 'Titillium Web'
    background primaryGrayColor
    width 85%
    height 100%
    box-shadow 0px 1px 10px rgba(33,33,33,.2)
    transform translateX(-100%)
    transition transform .5s ease
    &-article
        position absolute
        top 0
        left 0
        right 0
        bottom 0
        margin auto
        padding 0 5%
        max-width 95%
        max-height 100%
        overflow-x hidden
        overflow-y scroll
        &::before
            position relative
            width 100%
            height 100%
    &-title
        font-size 2rem
        font-weight 200
        margin .4rem 0
    &-paragraphDocument
        margin .4rem 0
    &-button
        box-sizing border-box
        background primaryGrayColor
        color primaryFontLightColor
        border none
        float right
        padding 0
        margin-top 1rem
        width 40px
        font-size 1.2rem
