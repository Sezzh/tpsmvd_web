.NavigationContainer
    font-family 'Titillium Web'
    font-size 1.2rem
    font-weight bold
    height 0px
    width 100%
    background frostBackgroundColor
    z-index -1
    overflow hidden
    transition all .5s ease
    &-list
        margin 0
        padding 0
    &-item
        padding .5rem 2rem
        display block
        margin 0 auto
    &-link
        text-decoration none
        color primaryFontDarkColor













