.HeaderContainer
    display flex
    position fixed
    top 0
    height 60px
    width 100%
    justify-content space-between
    flex-wrap wrap
    box-sizing border-box
    background frostBackgroundColor
    box-shadow 0 3px 15px rgba(0,0,0,.2)
    z-index 4
    border-bottom 1px solid rgba(44,44,44,.2)
    &-burgerButton
        background primaryGrayLightColor
        color primaryFontDarkColor
        width 60px
        border none
        padding 0
        font-size 2rem
    &-imgContainer
        margin 0
        margin-left 1rem
        position relative
        width 35%
        height 60px
    &-logo
        top 0
        bottom 0
        left 0
        right 0
        position absolute
        max-width 90%
        max-height 90%
        margin auto

@media (min-width 400px)
    .HeaderContainer
     &-logo
        max-width 80%
        max-height 80%
@media (min-width 768px)
    .HeaderContainer
        &-imgContainer
            margin-left 0
        &-logo
            top 0
            bottom 0
            left 0
            right 0
            position absolute
            max-width 70%
            max-height 70%
            margin auto

@media (min-width 900px)
    .HeaderContainer
        &-imgContainer
            width 20%
        &-burgerButton
            display none
