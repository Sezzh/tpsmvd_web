.ContactSection
    font-family 'Titillium Web'
    width 100%
    margin 60px 0 0 0
    padding-bottom 30px
    &-title
        font-weight 200
        font-size 2rem
        margin 0 auto
        padding 1rem 0
        width 90%
    &-inputText
        font-size 1.2rem
        display block
        padding 1.5rem 0
        width 90%
        height 2rem
        box-sizing border-box
        margin .5rem auto
        border none
        border-bottom 1px solid logoRedColor
        border-radius 0
    &-message
        font-size 1.2rem
        width 90%
        height 120px
        display block
        margin .5rem auto
        box-sizing border-box
        border none
        border-bottom 1px solid logoRedColor
        border-radius 0
    &-button
        background primaryGrayLightColor
        font-size 1.5rem
        font-weight 200
        display block
        box-sizing border-box
        border none
        height 50px
        padding 0
        border-radius 0
        width 90%
        margin .5rem auto

@media (min-width 48rem)
    .ContactSection
        padding-bottom 230px
