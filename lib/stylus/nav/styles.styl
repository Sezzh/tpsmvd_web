.NavigationContainer
    box-sizing border-box
    font-family 'Titillium Web'
    font-size 1.2rem
    font-weight bold
    height 0
    width 100%
    background frostBackgroundColor
    z-index -1
    overflow hidden
    transition all .3s ease
    &-list
        margin 0
        padding 0
        height 100%
    &-item
        box-sizing border-box
        border-bottom 1px solid rgba(221,221,221,.3)
        text-shadow 0 0 5px rgba(221,221,221,.8)
        display block
        height 25%
        margin 0 auto
        &:last-child
            border-bottom none
    &-link
        display block
        line-height 47px
        width 95%
        height 100%
        padding-left 5%
        text-decoration none
        color primaryFontDarkColor
        transition color .2s ease
        transition background .2s ease
        &:hover
            background primaryGrayColor
            color primaryFontLightColor
            text-shadow 0 0 5px rgba(5,5,5,.8)

@media (min-width 57rem)
    .NavigationContainer
        overflow hidden
        background rgba(255,255,255,0)
        height 60px
        margin 0
        padding 0
        width 60%
        z-index 5
        &-list
            width 80%
            height 100%
            display flex
            align-items center
            margin 0 auto
            padding 0
        &-item
            border none
            box-sizing border-box
            height 100%
            list-style-type none
            margin 0
            padding 0
            text-align center
            text-decoration none
            width 100%
        &-link
            line-height 60px
            padding 0
            text-shadow 0px 0px 10px rgba(14,14,14,.2)
            width 100%
            font-family 'Titillium Web'
            font-size 1.2rem
            text-decoration none
            color primaryFontDarkColor
            transition text-shadow .5s ease
            transition color .2s ease
            transition background .2s ease
