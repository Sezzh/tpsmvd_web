.SectionSliderContainer
    font-family 'Titillium Web'
    height 60vh
    margin-top 60px
    overflow hidden
    width 100%
    position relative
    &-img
        position absolute
        width 100%
        height 100%
        background-position center
        background-size cover
        transition transform 1s ease
    &-sliderDescription
        color primaryFontDarkColor
        background frostBackgroundColor
        width 100%
        height 100%
        &-figure
            padding .5rem 0
            position relative
            margin 0 auto
            width 80%
            height 35%
        &-figureImg
            bottom 0
            left 0
            margin auto
            max-width 70%
            max-height 70%
            position absolute
            right 0
            top 0
    &-sliderDescriptionTitle
        width 90%
        margin 0 auto
        font-weight 200
        font-size 2rem
    &-sliderDescriptionMessage
        width 90%
        margin .5rem auto

.ControlSlider
    margin 0
    width 100%
    height 5px
    display flex
    &-button
        box-sizing border-box
        border none
        border-right 1px solid gray
        margin 0
        padding 0
        height 100%
        width 25%
        transition background .5s ease
        &:last-child
            border-right none
@media (min-width 40em)
    .SectionSliderContainer
        &-sliderDescription
            display flex
            flex-wrap wrap
            align-items center
            &-figure
                width 50%
                height 50%
        &-sliderDescriptionTitle
            width 50%
            font-size 3rem
        &-sliderDescriptionMessage
            width 80%
            text-align left
            font-size 1.5rem
